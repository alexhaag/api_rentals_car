{
  "openapi": "3.0.0",
  "info": {
    "title": "Documentação Aluguel Carro",
    "version": "1.0.0",
    "contact": {
      "email": "alexhaag@hotmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "Categoria"
        ],
        "summary": "Cria uma categoria",
        "description": "Cria uma nova categoria",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Amostra de nome da categoria",
                  "description": "Amostra de descrição da categoria"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Categoria já existe."
          }
        }
      },
      "get": {
        "tags": [
          "Categoria"
        ],
        "summary": "Lista todas as categorias",
        "description": "Lista todas as categorias",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": [
          "Categoria"
        ],
        "summary": "Upload de novas categorias",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": [
          "Specifications"
        ],
        "summary": "Cria uma especificação",
        "description": "Cria uma nova especificação",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specification"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Especificação já existe."
          }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}